#include <stdio.h>

int main() {
    // Оголошення змінних для зберігання часу, за який кожен гість з'їдає пиріг
    int t1, t2, t3;

    // Зчитування часів з'їдання пирога від користувача
    scanf("%d %d %d", &t1, &t2, &t3);

    // Обчислення загального часу, необхідного для того, щоб всі гості з'їли пиріг
    double total_time = 1.0 / t1 + 1.0 / t2 + 1.0 / t3;

    // Обчислення часу, за який гості разом можуть з'їсти один пиріг
    double time_to_eat_pie = 1.0 / total_time;

    // Виведення результату
    printf("%.2f\n", time_to_eat_pie);

    return 0;
}
